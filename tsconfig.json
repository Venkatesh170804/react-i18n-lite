{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "types": ["jest", "node"],
    "baseUrl": "src"
  },
  "include": ["src", "tests", "vite.config.ts"],
  "exclude": ["dist", "node_modules"]
}
